// 清除<input>标签属性
._clearInput {
  outline: none;
  background: transparent;
  border: none;
  outline: medium;
}

// 清除<a>标签属性
._clearA
  text-decoration none
  &:hover
    color #000 //鼠标划过链接
  &:active
    color #000 //已选中的链接
  &:visited
    color #000 //已访问的链接
  &:link
    color #000 //未访问的链接