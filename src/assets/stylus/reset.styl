// ----- 自定义

*, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html, body{
  width: 100%;
  height: 100%;
}

body {
  font-family: -apple-system, "Segoe UI", Helvetica;
  -webkit-text-size-adjust: none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  user-select: none;
}

body, body a, body button, body media-switch, body:hover {
  cursor: url(../images/finger.png) 8 8,auto;
}

// ----- 尺寸

html
